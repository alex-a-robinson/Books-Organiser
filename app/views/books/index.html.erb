<%= stylesheet_link_tag "style" %>

<h1>Library</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Rating</th>
    <th>Read</th>
    <th>Cover</th>
  </tr>
 
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.rating %></td>
      <td><%= book.read  %></td>
      <td><%= image_tag serve_books_path(book) %></td>
    </tr>
  <% end %>
</table>